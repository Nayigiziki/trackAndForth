{
  "manifest_version": 2,
  "name": "Chat with friends",
  "description": "Chat",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://api.soundcloud.com; object-src 'self'", 
  "browser_action": {
    "default_icon": "assets/diamond.png",
    "default_popup": "index.html",
    "default_title": "Chattin' N' Shit"
  },
  "permissions": [
  "activeTab", 
  "https://ajax.googleapis.com/", 
  "storage", 
  "notifications",
  "background",
  "contextMenus",
  "tabs",
  "identity"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
        "16": "assets/diamond.png"
  },
  "version": "2.0"

}
